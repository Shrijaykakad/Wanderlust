<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">

  <h3>Edit Listing</h3>
  <form action="http://localhost:8080/listings/<%= editListing._id %>?_method=PUT" class="needs-validation" method="post" novalidate>
    <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text"  name="listing[title]" class="form-control" value ="<%= editListing.title %>" required>
    <div class="invalid-feedback">
      Please Enter The Title.
    </div>
    <div class="valid-feedback">
      Looks good!
    </div>
    </div>

    <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" id="description" class="form-control" placeholder="enter description"><%= editListing.description %></textarea>
    </div>

    <div class="mb-3">
    <label for="filename" class="form-label">Filename</label>
    <input type="text" name="listing[image][filename]" class="form-control" value ="<%= editListing.image.filename %>" required>
    <div class="invalid-feedback">
      Please Enter The Filename.
    </div>
    <div class="valid-feedback">
      Looks good!
    </div>
   </div>
    
    <div class="mb-3">
    <label for="url" class="form-label">Url</label>
    <input type="text" name="listing[image][url]" class="form-control" value ="<%= editListing.image.url %>">
    </div>

    <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" class="form-control" value ="<%= editListing.price %>" required>
        <div class="invalid-feedback">
          Please Enter The Price.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
        </div>
    
        <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" class="form-control" value ="<%= editListing.country %>" required>
        <div class="invalid-feedback">
          Please Enter The Country.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
        </div>
    </div>

    <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" name="listing[location]" class="form-control" value ="<%= editListing.location %>" required>
    <div class="invalid-feedback">
      Please Enter The Location.
    </div>
    <div class="valid-feedback">
      Looks good!
    </div>
    </div>

    <button class="btn btn-dark edit-btn mb-3">Submit</button>
  </form>
</div>
</div>
</body>